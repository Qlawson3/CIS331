/*NORMAL TABLES BELOW*/
-- Drop Foreign Key Constraints
ALTER TABLE Schedule DROP CONSTRAINT sched_semesterid_fk;
ALTER TABLE Schedule DROP CONSTRAINT sched_courseid_fk;
ALTER TABLE Enrollment DROP CONSTRAINT studentid_fk;
ALTER TABLE Enrollment DROP CONSTRAINT semesterid_fk;

-- Drop Tables
DROP TABLE Schedule;
DROP TABLE Enrollment;
DROP TABLE Course;
DROP TABLE Semester;
DROP TABLE Faculty;
DROP TABLE Student;

-- Recreate the tables if needed
CREATE TABLE Faculty(
    FacultyID INTEGER,
    FullName VARCHAR2(255),
    Email VARCHAR2(255),
    Building VARCHAR2(255),
    OfficeNum INTEGER,
    PhoneNum VARCHAR2(255),
    Dept VARCHAR2(255),
    Position VARCHAR2(255)
    --CONSTRAINT faculty_pk PRIMARY KEY (FacultyID)
);

CREATE TABLE Course(
    CourseID INTEGER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    CoursePrefix VARCHAR2(4),
    CourseNum CHAR(3),
    CourseName VARCHAR2(255),
    DaysTaught VARCHAR2(255),
    StartTime VARCHAR2(255),
    EndTime VARCHAR2(255),
    Credits INTEGER
    --CONSTRAINT course_pk PRIMARY KEY (CourseID)
);

CREATE TABLE Semester( 
    SemesterID INTEGER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    SemesterPeriod VARCHAR(10),
    SemesterYear INTEGER
    --CONSTRAINT semesterid_pk PRIMARY KEY (SemesterID)
);

CREATE TABLE Enrollment( 
    EnrollmentID INTEGER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    NumEnrolled INTEGER,
    StudentID INTEGER,
    SemesterID INTEGER
    --CONSTRAINT enrollmentid_pk PRIMARY KEY (EnrollmentID),
    --CONSTRAINT studentid_fk FOREIGN KEY (StudentID) REFERENCES Student(StudentID),
    --CONSTRAINT semesterid_fk FOREIGN KEY (SemesterID) REFERENCES Semester(SemesterID)
);

CREATE TABLE Schedule (
    ScheduleID INTEGER GENERATED BY DEFAULT ON NULL AS IDENTITY,
    SemesterID INTEGER,
    CourseID INTEGER,
    FacultyID INTEGER
    --CONSTRAINT schedule_pk PRIMARY KEY (ScheduleID),
    --CONSTRAINT sched_semesterid_fk FOREIGN KEY (SemesterID) REFERENCES Semester(SemesterID),
    --CONSTRAINT sched_courseid_fk FOREIGN KEY (CourseID) REFERENCES Course(CourseID)
);

CREATE TABLE Student(
    StudentID INTEGER,
    FullName VARCHAR2(255),
    Ssn VARCHAR2(8),
    HomeAddress VARCHAR2(255),
    Email VARCHAR2(255),
    Gpa FLOAT,
    EmergName VARCHAR2(255),
    EmergEmail VARCHAR2(255),
    EmergPhone VARCHAR2(255)
    --CONSTRAINT student_pk PRIMARY KEY (StudentID)
);
